{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@core/*": ["src/core/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": ["src", "__tests__", "app.config.ts", "nativewind-env.d.ts"],
  "exclude": [
    "node_modules",
    ".pnpm-store",
    "android",
    "ios",
    "dist",
    "coverage",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
